

def build(bld):
    bld.DefineGem(
        # General
        includes                = [ '.',
                                    bld.Path('Code/CryEngine/CryCommon'),
                                    bld.Path('Code/CryEngine/CryAction')],
        use                     = ['AzGameFramework'],

        # Platform Specific
        android_use             = ['AndroidLauncher'],

        # ==============================
        # iOS
        # 'ios_output_file_name' must match both
        # 'executable_name' in 'project.json' and
        # 'Executable file' in '../Resources/IOSLauncher/Info.plist'
        # ==============================
        ios_output_file_name    = 'GeniusLauncher',
        ios_file_list           = ['genius_ios.waf_files'],

        # ==============================
        # AppleTV
        # 'appletv_output_file_name' must match both
        # 'executable_name' in 'project.json' and
        # 'Executable file' in '../Resources/AppleTVLauncher/Info.plist'
        # ==============================
        appletv_output_file_name = 'GeniusLauncher',
        appletv_file_list       = ['genius_appletv.waf_files'],

        darwin_file_list        = ['genius_mac.waf_files'],

       
       

        # Testing
        test_all_file_list      = ['genius_tests.waf_files'],

        # Add additional custom build options here

    )
